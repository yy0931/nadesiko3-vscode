{
	"name": "nadesiko3-vscode",
	"displayName": "日本語プログラミング言語 なでしこv3",
	"description": "",
	"version": "1.15.0",
	"license": "MIT",
	"publisher": "yy0931",
	"repository": {
		"type": "git",
		"url": "https://github.com/yy0931/nadesiko3-vscode"
	},
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:nadesiko3"
	],
	"main": "./src/extension.js",
	"contributes": {
		"configurationDefaults": {
			"[nadesiko3]": {
				"editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?｀～！＠＃＄％＾＆＊（）－＝＋［｛］｝＼｜；：＇＂，．＜＞／？「」『』“”"
			}
		},
		"semanticTokenScopes": [
			{
				"language": "nadesiko3",
				"scopes": {
					"*.underline": [
						"markup.underline"
					]
				}
			}
		],
		"languages": [
			{
				"id": "nadesiko3",
				"extensions": [
					".nako3"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"menus": {
			"editor/title/run": [
				{
					"command": "nadesiko3.runActiveFile",
					"when": "editorLangId == nadesiko3"
				}
			],
			"commandPalette": [
				{
					"command": "nadesiko3.runActiveFile",
					"when": "editorLangId == nadesiko3"
				}
			]
		},
		"commands": [
			{
				"command": "nadesiko3.runActiveFile",
				"title": "Run Active File",
				"category": "Nadesiko3",
				"icon": "$(play)"
			},
			{
				"command": "nadesiko3.testActiveFile",
				"title": "Test Active File",
				"category": "Nadesiko3",
				"icon": "$(testing-run-icon)"
			}
		]
	},
	"scripts": {
		"prepare": "cd node_modules/nadesiko3 && yarn build:command && cd ../.. && node gen_docs.js",
		"test": "npx eslint src/**/*.js && node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/chai": "^4.2.15",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/semver": "^7.3.4",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "^4.17.0",
		"@typescript-eslint/parser": "^4.17.0",
		"chai": "^4.3.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"nadesiko3doc": "git+https://github.com/kujirahand/nadesiko3doc#557dd9d0b475edb4af6823dac12d7785fd451bf4",
		"semver": "^7.3.4",
		"typescript": "^4.2.3",
		"vsce": "^1.87.0",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"eslint": "^7.21.0",
		"nadesiko3": "git+https://github.com/kujirahand/nadesiko3#b2d1e6229f8a640bcd052ee81ed115b78325bf1d",
		"node-html-parser": "^3.0.3"
	}
}
