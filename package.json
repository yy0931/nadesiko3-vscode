{
	"name": "nadesiko3-vscode",
	"displayName": "日本語プログラミング言語 なでしこv3",
	"description": "",
	"version": "1.8.4",
	"license": "MIT",
	"publisher": "yy0931",
	"repository": {
		"type": "git",
		"url": "https://github.com/yy0931/nadesiko3-vscode"
	},
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:nadesiko3"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configurationDefaults": {
			"[nadesiko3]": {
				"editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?｀～！＠＃＄％＾＆＊（）－＝＋［｛］｝＼｜；：＇＂，．＜＞／？「」『』“”"
			}
		},
		"languages": [
			{
				"id": "nadesiko3",
				"extensions": [
					".nako3"
				],
				"configuration": "./language/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "nadesiko3",
				"scopeName": "source.nadesiko3",
				"path": "./language/nadesiko3.tmLanguage.json"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "nadesiko3.runActiveFileOnBrowser",
					"when": "editorLangId == nadesiko3",
					"group": "1_run@10"
				}
			],
			"commandPalette": [
				{
					"command": "nadesiko3.runActiveFileOnVSCode",
					"when": "editorLangId == nadesiko3"
				},
				{
					"command": "nadesiko3.runActiveFileOnBrowser",
					"when": "editorLangId == nadesiko3"
				},
				{
					"command": "nadesiko3.compileActiveFile",
					"when": "editorLangId == nadesiko3"
				}
			]
		},
		"commands": [
			{
				"command": "nadesiko3.runActiveFileOnVSCode",
				"title": "Run Active File on VSCode",
				"category": "Nadesiko3"
			},
			{
				"command": "nadesiko3.runActiveFileOnBrowser",
				"title": "Run Active File on Web Browser",
				"category": "Nadesiko3",
				"icon": "$(play)"
			},
			{
				"command": "nadesiko3.compileActiveFile",
				"title": "Compile Current File",
				"category": "Nadesiko3"
			}
		],
		"configuration": {
			"title": "Nadesiko3",
			"properties": {
				"nadesiko3.showTokenDecorations": {
					"type": "boolean",
					"default": true,
					"description": "トークンの区切り線を表示する"
				},
				"nadesiko3.showJosiDecorations": {
					"type": "boolean",
					"default": true,
					"description": "助詞を強調表示する"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "ts-node gen_nako3_plugin_declaration.ts && tsc",
		"watch": "ts-node gen_nako3_plugin_declaration.ts && tsc -watch",
		"test": "TS_NODE_FILES=\"true\" mocha -r ts-node/register 'src/**/*.test.ts'",
		"package": "rimraf out && vsce package"
	},
	"devDependencies": {
		"@types/chai": "^4.2.14",
		"@types/express": "^4.17.11",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.22",
		"@types/vscode": "^1.51.0",
		"@types/ws": "^7.4.0",
		"chai": "^4.2.0",
		"mocha": "^8.2.1",
		"rimraf": "^3.0.2",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"express": "^4.17.1",
		"get-port": "^5.1.1",
		"jquery": "^3.5.1",
		"json5": "^2.2.0",
		"marked": "^1.2.8",
		"nadesiko3": "^3.1.16",
		"open": "^7.4.0",
		"ws": "^7.4.2"
	}
}
