{
	"name": "nadesiko3-vscode",
	"displayName": "日本語プログラミング言語 なでしこv3",
	"description": "",
	"version": "1.3.2",
	"license": "MIT",
	"publisher": "yy0931",
	"repository": {
		"type": "git",
		"url": "https://github.com/yy0931/nadesiko3-vscode"
	},
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:nadesiko3"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "nadesiko3",
				"extensions": [
					".nako",
					".nako3"
				],
				"configuration": "./language/language-configuration.json"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "nadesiko3.runActiveFileOnBrowser",
					"when": "editorLangId == nadesiko3",
					"group": "1_run@10"
				}
			],
			"commandPalette": [
				{
					"command": "nadesiko3.runActiveFileOnVSCode",
					"when": "editorLangId == nadesiko3"
				},
				{
					"command": "nadesiko3.runActiveFileOnBrowser",
					"when": "editorLangId == nadesiko3"
				},
				{
					"command": "nadesiko3.compileActiveFile",
					"when": "editorLangId == nadesiko3"
				}
			]
		},
		"commands": [
			{
				"command": "nadesiko3.runActiveFileOnVSCode",
				"title": "Run Active File on VSCode",
				"category": "Nadesiko3"
			},
			{
				"command": "nadesiko3.runActiveFileOnBrowser",
				"title": "Run Active File on Web Browser",
				"category": "Nadesiko3",
				"icon": "$(play)"
			},
			{
				"command": "nadesiko3.compileActiveFile",
				"title": "Compile Current File",
				"category": "Nadesiko3"
			}
		],
		"configuration": {
			"title": "Nadesiko3",
			"properties": {
				"nadesiko3.showTokenDecorations": {
					"type": "boolean",
					"default": true,
					"description": "トークンの区切り線を表示する"
				},
				"nadesiko3.showJosiDecorations": {
					"type": "boolean",
					"default": true,
					"description": "助詞を強調表示する"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch",
		"test": "TS_NODE_FILES=\"true\" mocha -r ts-node/register 'src/**/*.test.ts'"
	},
	"devDependencies": {
		"@types/chai": "^4.2.14",
		"@types/express": "^4.17.11",
		"@types/fs-extra": "^9.0.6",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.14.22",
		"@types/node-fetch": "^2.5.8",
		"@types/vscode": "^1.51.0",
		"@types/ws": "^7.4.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"chai": "^4.2.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-node": "^9.1.1",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"browserslist": "^4.16.1",
		"caniuse-db": "^1.0.30001180",
		"chart.js": "^2.9.4",
		"csv-lite-js": "^0.0.7",
		"dayjs": "^1.10.4",
		"express": "^4.17.1",
		"fs-extra": "^9.1.0",
		"get-port": "^5.1.1",
		"html": "^1.0.0",
		"iconv-lite": "^0.6.2",
		"jquery": "^3.5.1",
		"marked": "^1.2.8",
		"nadesiko3": "^3.1.16",
		"node-fetch": "^2.6.1",
		"open": "^7.3.1",
		"opener": "^1.5.2",
		"readline": "^1.3.0",
		"readline-sync": "^1.4.10",
		"sendkeys-js": "^0.0.4",
		"ws": "^7.4.2"
	}
}
