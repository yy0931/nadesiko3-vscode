{
	"name": "nadeshiko3-vscode",
	"displayName": "nadeshiko3-vscode",
	"description": "",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:nadeshiko"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "nadeshiko",
				"extensions": [
					".nako"
				],
				"configuration": "./language/language-configuration.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"test": "TS_NODE_FILES=\"true\" mocha -r ts-node/register 'src/**/*.test.ts'"
	},
	"devDependencies": {
		"@types/chai": "^4.2.14",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"chai": "^4.2.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-node": "^9.1.1",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
