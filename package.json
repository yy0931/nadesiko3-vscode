{
	"name": "nadesiko3-vscode",
	"displayName": "日本語プログラミング言語 なでしこv3",
	"description": "",
	"version": "1.18.3",
	"license": "MIT",
	"publisher": "yy0931",
	"repository": {
		"type": "git",
		"url": "https://github.com/yy0931/nadesiko3-vscode"
	},
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:nadesiko3"
	],
	"main": "./src/extension.js",
	"contributes": {
		"configurationDefaults": {
			"[nadesiko3]": {
				"editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?｀～！＠＃＄％＾＆＊（）－＝＋［｛］｝＼｜；：＇＂，．＜＞／？「」『』“”"
			}
		},
		"semanticTokenScopes": [
			{
				"language": "nadesiko3",
				"scopes": {
					"*.underline": [
						"markup.underline"
					]
				}
			}
		],
		"languages": [
			{
				"id": "nadesiko3",
				"extensions": [
					".nako3"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"menus": {
			"editor/title/run": [
				{
					"command": "nadesiko3.runActiveFile",
					"when": "editorLangId == nadesiko3"
				}
			],
			"commandPalette": [
				{
					"command": "nadesiko3.runActiveFile",
					"when": "editorLangId == nadesiko3"
				}
			]
		},
		"commands": [
			{
				"command": "nadesiko3.runActiveFile",
				"title": "Run Active File",
				"category": "Nadesiko3",
				"icon": "$(play)"
			},
			{
				"command": "nadesiko3.testActiveFile",
				"title": "Test Active File",
				"category": "Nadesiko3",
				"icon": "$(testing-run-icon)"
			}
		]
	},
	"scripts": {
		"test": "npx eslint src/**/*.js && node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/chai": "*",
		"@types/fs-extra": "^9.0.11",
		"@types/glob": "*",
		"@types/mocha": "*",
		"@types/node": "*",
		"@types/semver": "*",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "*",
		"@typescript-eslint/parser": "*",
		"chai": "*",
		"eslint": "*",
		"mocha": "*",
		"nadesiko3doc": "git+https://github.com/kujirahand/nadesiko3doc",
		"semver": "*",
		"typescript": "*",
		"vsce": "*",
		"vscode-test": "*"
	},
	"dependencies": {
		"glob": "*",
		"fs-extra": "^9.1.0",
		"nadesiko3": "git+https://github.com/kujirahand/nadesiko3",
		"node-html-parser": "*"
	}
}
